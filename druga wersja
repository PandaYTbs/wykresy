    <script>

        let formHide = document.getElementById("contentLogin");
        formHide.style.display= "none";

        function colorChangeCreate() {
            document.getElementById("login").style.backgroundColor = "#000";
            document.getElementById("login").style.color = "#ddd";
            document.getElementById("create").style.backgroundColor = "#ddd";
            document.getElementById("create").style.color = "#000";

            let contentLoginHide = document.getElementById("contentLogin");
            contentLoginHide.style.display= "";

            let contentCreateHide = document.getElementById("contentCreate");
            contentCreateHide.style.display= "none";
        }
        function colorChangeLogin() {
            document.getElementById("create").style.backgroundColor = "#000";
            document.getElementById("create").style.color = "#ddd";
            document.getElementById("login").style.backgroundColor = "#ddd";
            document.getElementById("login").style.color = "#000";

            let formHide = document.getElementById("contentLogin");
            formHide.style.display= "none";

            let contentCreateHide = document.getElementById("contentCreate");
            contentCreateHide.style.display= "";
        }
    </script>
